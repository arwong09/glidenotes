<div class="row">
  <div class="col-xs-1 col-xs-offset-1">
    <h3><%= model.get('title') %></h3>
  </div>
</div>

<div class="row">
  <ul class="sortable-lists"><!-- BEGIN UL OF LIST -->
    <% model.lists().each(function(list){ %><!-- ITERATE THROUGH ALL LISTS -->
        <li class="ui-state-default list-panel panel panel-default"
          data-id="<%= list.get('id') %>">
          
          <div class="panel-body list-body">
             <h4><%= list.get('title') %></h4>
            <a href="#" data-id="<%= list.get('id') %>" 
              class="glyphicon glyphicon-plus pull-right"></a>
            <div id="add-card-<%= list.get('id') %>"></div><!-- ADDS A CARD  -->
          
            <ul class="sortable-cards" data-listid="<%= list.get('id') %>">
              <% list.cards().each(function(card){ %>
                <li class='ui-state-default card-li' id='card-body' 
                  data-id="<%= card.get('id') %>"  
                  data-listid='<%= list.get('id') %>'>
                  <div class='panel panel-default panel-body' 
                    data-id="<%= card.get('id') %>" 
                    data-listid="<%= list.get('id') %>">
                    <!-- deleted from here -->
                    <%= card.get('title') %>
                    <a href="#" data-id='<%= card.get("id") %>' 
                      data-listid='<%= list.get("id") %>'
                      class='glyphicon glyphicon-trash trash-hover'></a>
                  </div>
                </li>
              <% }) %>
            </ul>
          </div>
        </li>
    <% }); %><!--- END ITERATING THROUGH LISTS -->
  </ul>
</div>

